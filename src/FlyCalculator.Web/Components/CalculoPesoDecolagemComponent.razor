@using FlyCalculator.Web.Models

<div class="form-group container">
    <h5>@title</h5>
    <div class="row">
        <div class="col-md-2">
            <label>Peso Máx. Decolagem</label>
        </div>
        <div class="col-md-5">
            <input type="text" value="@Model.MaximoDecolagem" disabled/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label>Peso Básico Vazio(PBV)</label>
        </div>
        <div class="col-md-5">
            <input type="number" @bind-value="Model.BasicoVazio" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label><b>Peso disponível total: </b></label>
        </div>
        <div class="col-md-5">
            <input type="text" value="@Model.DisponivelTotal.ToString("#.##")" disabled/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label>Mínimo Comb. Requirido</label>
        </div>
        <div class="col-md-5">
            <input type="text" value="@((Model.MinimoRequerido.Litros / 0.819M).ToString("#,#.##"))" disabled/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label>Peso dos tripulantes</label>
        </div>
        <div class="col-md-5">
            <input type="number" @bind-value="Model.Tripulantes" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label><b>Carga Paga Máxima: </b></label>
        </div>
        <div class="col-md-5">
            <input type="text" value="@Model.CargaMaxima.ToString("#.##")" disabled />
        </div>
    </div>
</div>

@code {
	private string title = "Cálculo de Peso de Decolagem";
	private CalculoPesoDecolagem Model { get; set; }

	[Parameter]
	public Autonomia MinimoRequirido { get; set; }

	[Parameter]
	public EventCallback<Autonomia> MinimoRequiridoChanged { get; set; }

	protected override void OnInitialized()
	{
		Model = new CalculoPesoDecolagem(MinimoRequirido);
	}
}
